<UserControl x:Class="_241015_WPF_Windows_and_Dialogs.MessageBoxes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_241015_WPF_Windows_and_Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel
            Orientation="Vertical">

            <Button x:Name="showMessageBox"
                    Content="Show MessageBox"
                    Click="showMessageBox_Click"
                    Margin="10 10 0 0"/>

            <Button x:Name="buttonOpenFile"
                    Click="buttonOpenFile_Click"
                    Content="Open File"
                    Margin="10 10 0 0"/>

            <Button x:Name="buttonSaveFile"
                    Content="Save File"
                    Margin="10 10 0 0"
                    Click="buttonSaveFile_Click" />

            <Button x:Name="buttonPrint"
                    Content="Print File"
                    Margin="10 10 0 0"
                    Click="buttonPrint_Click" />

        </WrapPanel>
    </Grid>
</UserControl>
