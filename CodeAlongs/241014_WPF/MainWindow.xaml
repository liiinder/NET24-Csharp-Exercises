<Window x:Class="_241014_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_241014_WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" MinHeight="225" MaxHeight="700"
        Width="800"  MinWidth="400"  MaxWidth="1200"
        FontSize="30">
    
    <Grid Background="#999"
          d:ShowGridLines="True">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        
        <Button HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="1"
                Content="Hello World!" />

        <Button HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Column="0"
               Grid.Row="0"
               x:Name="myButton" 
               Click="myButton_Click"
               Content="Hello" />
        
        <local:MyGrid Grid.Column="1" Grid.Row="1">
            
        </local:MyGrid>
        
    </Grid>
    
</Window>

